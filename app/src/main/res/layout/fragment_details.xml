<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown_50"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.details.DetailsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/details_first_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/brown_dark_900"
        android:textSize="20sp"
        tools:text="Some first title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/details_second_title"
        android:textColor="@color/brown_500"
        android:textSize="20sp"
        tools:text="Some second title" />

    <LinearLayout
        android:id="@+id/details_author_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detail_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.7"
            android:textAlignment="textStart"
            android:textColor="@color/brown_900"
            android:textSize="16sp"
            tools:text="Some author" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/details_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:alpha="0.7"
            android:textAlignment="textEnd"
            android:textColor="@color/brown_900"
            android:textSize="16sp"
            tools:text="01.01.2022 10:33" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:id="@+id/details_content">

    </LinearLayout>

</LinearLayout>